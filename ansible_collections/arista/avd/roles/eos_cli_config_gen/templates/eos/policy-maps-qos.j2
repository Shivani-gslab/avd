{# eos - policy map qos #}
{% for policy_map in policy_maps.qos | arista.avd.natural_sort('name') %}
!
policy-map type quality-of-service {{ policy_map.name }}
{%     for class in policy_map.classes | arista.avd.default([]) %}
{%         if loop.index > 1 %}
   !
{%         endif %}
   class {{ class.name }}
{%         for set in class.set | arista.avd.default([]) %}
{%             set cli_set = set | replace('_','-') | lower %}
{%             if cli_set in ['cos', 'dscp', 'traffic-class', 'drop-precedence'] %}
      set {{ cli_set }} {{ class.set[set] }}
{%             endif %}
{%         endfor %}
{%         if class.police.cir is arista.avd.defined %}
{%             if class.police.cir.cir_rate is arista.avd.defined and class.police.cir.cir_unit is arista.avd.defined and class.police.cir.bc is arista.avd.defined and class.police.cir.bc_unit is arista.avd.defined %}
      police cir {{ class.police.cir.cir_rate }} {{ class.police.cir.cir_unit }} bc {{ class.police.cir.bc }} {{ class.police.cir.bc_unit }}
{%             endif %}
{%         elif class.police.rate is arista.avd.defined %}
{%             if class.police.rate.lower_rate is arista.avd.defined and class.police.rate.rate_unit is arista.avd.defined and class.police.rate.lower_rate_burst_size is arista.avd.defined and class.police.rate.burst_size_unit is arista.avd.defined %}
{%                 if class.police.rate.higher_rate is arista.avd.defined and class.police.rate.higher_rate_burst_size is arista.avd.defined %}
{%                     if class.police.rate.action is arista.avd.defined("dscp") and class.police.rate.dscp_value is arista.avd.defined %}
      police rate {{ class.police.rate.lower_rate }} {{ class.police.rate.rate_unit }} burst-size {{ class.police.rate.lower_rate_burst_size }} {{ class.police.rate.burst_size_unit }} action set dscp {{ class.police.rate.dscp_value }} rate {{ class.police.rate.higher_rate }} {{ class.police.rate.rate_unit }} {{ class.police.rate.higher_rate_burst_size }} {{ class.police.rate.burst_size_unit }}
{%                     elif class.police.rate.action is arista.avd.defined("drop-precedence") %}
      police rate {{ class.police.rate.lower_rate }} {{ class.police.rate.rate_unit }} burst-size {{ class.police.rate.lower_rate_burst_size }} {{ class.police.rate.burst_size_unit }} action set drop-precedence rate {{ class.police.rate.higher_rate }} {{ class.police.rate.rate_unit }} {{ class.police.rate.higher_rate_burst_size }} {{ class.police.rate.burst_size_unit }}
{%                     else %}
      police rate {{ class.police.rate.lower_rate }} {{ class.police.rate.rate_unit }} burst-size {{ class.police.rate.lower_rate_burst_size }} {{ class.police.rate.burst_size_unit }} rate {{ class.police.rate.higher_rate }} {{ class.police.rate.rate_unit }} {{ class.police.rate.higher_rate_burst_size }} {{ class.police.rate.burst_size_unit }}
{%                     endif %}
{%                 else %}
      police rate {{ class.police.rate.lower_rate }} {{ class.police.rate.rate_unit }} burst-size {{ class.police.rate.lower_rate_burst_size }} {{ class.police.rate.burst_size_unit }}
{%                 endif %}
{%             endif %}
{%         endif %}
{%     endfor %}
{% endfor %}
